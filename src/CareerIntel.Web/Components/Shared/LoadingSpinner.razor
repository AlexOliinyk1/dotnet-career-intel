@if (Loading)
{
    <div class="loading-spinner" role="status" aria-live="polite">
        <div class="spinner" aria-hidden="true"></div>
        <span>@Message</span>
    </div>
}

@code {
    [Parameter] public bool Loading { get; set; }
    [Parameter] public string Message { get; set; } = "Loading...";
}
