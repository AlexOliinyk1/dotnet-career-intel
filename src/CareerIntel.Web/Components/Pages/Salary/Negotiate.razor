    <a href="/jobs" class="btn">Browse Jobs</a>
</div>

@code {
    private OfferInput _newOffer = new();
    private List<OfferEntry> _offers = [];
    private OfferEntry? _bestOffer;
    private bool _showNegotiation;
    private bool _analyzing;
    private OfferInput _analyzedOffer = new();
    private string? _engineError;

    // Engine-powered data
    private NegotiationInsight? _historicalInsight;
    private NegotiationStrategy? _negotiationStrategy;
    private string? _counterStrategy;

    // Cached data for engine calls
    private List<NegotiationState> _historicalNegotiations = [];
    private List<JobVacancy> _marketData = [];
    private UserProfile _userProfile = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Load historical negotiations, market data, and profile in parallel
            var negotiationsTask = LoadNegotiations();
            var vacanciesTask = VacancyRepo.GetVacanciesAsync();
            var profileTask = LoadProfile();

            await Task.WhenAll(negotiationsTask, vacanciesTask, profileTask);

            _historicalNegotiations = negotiationsTask.Result;
            _marketData = vacanciesTask.Result;
            _userProfile = profileTask.Result;

            // Generate historical insight from the intelligence engine
            if (_historicalNegotiations.Count > 0)
            {
                _historicalInsight = NegotiationIntelEngine.AnalyzeHistory(_historicalNegotiations);
            }
        }
        catch (Exception ex)
        {
            _engineError = $"Failed to load intelligence data: {ex.Message}";
        }
    }

    private async Task<List<NegotiationState>> LoadNegotiations()
    {
        try
        {
            return await NegotiationRepo.GetAllAsync();
        }
        catch
        {
            return [];
        }
    }

    private void AddOffer()
    {
        if (string.IsNullOrWhiteSpace(_newOffer.Company) || _newOffer.Salary <= 0)
            return;

        var entry = new OfferEntry
        {
            Company = _newOffer.Company,
            Position = _newOffer.Position,
            Salary = _newOffer.Salary,
            Currency = _newOffer.Currency,
            RemotePolicy = _newOffer.RemotePolicy,
            Benefits = _newOffer.Benefits,
            GrowthPotential = _newOffer.GrowthPotential,
            TechStackQuality = _newOffer.TechStackQuality,
            OverallScore = CalculateOverallScore(_newOffer)
        };

        _offers.Add(entry);
        _bestOffer = _offers.OrderByDescending(o => o.OverallScore).First();

        Toast.Success($"Offer from {entry.Company} added (score: {entry.OverallScore}/100)");

        // Reset form
        _newOffer = new OfferInput();
    }

    private async Task AnalyzeNegotiation()
    {
        if (string.IsNullOrWhiteSpace(_newOffer.Company) || _newOffer.Salary <= 0)
            return;

        _analyzing = true;
        _negotiationStrategy = null;
        _counterStrategy = null;

        _analyzedOffer = new OfferInput
        {
            Company = _newOffer.Company,
            Position = _newOffer.Position,
            Salary = _newOffer.Salary,
            Currency = _newOffer.Currency,
            RemotePolicy = _newOffer.RemotePolicy,
            Benefits = _newOffer.Benefits,
            GrowthPotential = _newOffer.GrowthPotential,
            TechStackQuality = _newOffer.TechStackQuality,
            MarketRate = _newOffer.MarketRate
        };

        _showNegotiation = true;

        try
        {
            // Build a NegotiationState from the form input for engine analysis
            var offerState = new NegotiationState
            {
                Company = _analyzedOffer.Company,
                Role = _analyzedOffer.Position,
                OfferedSalary = _analyzedOffer.Salary,
                OfferedCurrency = _analyzedOffer.Currency,
                MarketRate = _analyzedOffer.MarketRate,
                Status = "Pending",
                ReceivedDate = DateTimeOffset.UtcNow,
                Leverage = new List<string>()
            };

            // Use NegotiationEngine for full strategy analysis
            _negotiationStrategy = NegotiationEngine.AnalyzeOffer(
                offerState,
                _historicalNegotiations,
                _userProfile,
                _marketData);

            // Use NegotiationIntelligenceEngine for counter-strategy based on history
            if (_historicalInsight is not null && _historicalInsight.TotalNegotiations > 0)
            {
                _counterStrategy = NegotiationIntelEngine.GenerateCounterStrategy(offerState, _historicalInsight);
            }
        }
        catch (Exception ex)
        {
            _engineError = $"Negotiation analysis failed: {ex.Message}";
        }
        finally
        {
            _analyzing = false;
        }
    }

    private void RemoveOffer(OfferEntry offer)
    {
        _offers.Remove(offer);
        _bestOffer = _offers.Count > 0
            ? _offers.OrderByDescending(o => o.OverallScore).First()
            : null;
        Toast.Info($"Removed offer from {offer.Company}");
    }

    private async Task<UserProfile> LoadProfile()
    {
        var profilePath = Path.Combine(DataDir.Path, "my-profile.json");

        if (File.Exists(profilePath))
        {
            var json = await File.ReadAllTextAsync(profilePath);
            return System.Text.Json.JsonSerializer.Deserialize<UserProfile>(json,
                new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true })
                ?? new UserProfile();
        }

        return new UserProfile();
    }

    private static int CalculateOverallScore(OfferInput offer)
    {
        // Salary score (0-40 points) - scaled for $50K-$350K range
        var salaryScore = offer.Salary switch
        {
            >= 300_000m => 40,
            >= 200_000m => 33 + (int)((offer.Salary - 200_000m) / 100_000m * 7),
            >= 150_000m => 28 + (int)((offer.Salary - 150_000m) / 50_000m * 5),
            >= 100_000m => 20 + (int)((offer.Salary - 100_000m) / 50_000m * 8),
            _ => Math.Min((int)(offer.Salary / 5_000m), 20)
        };

        // Remote score (0-15 points)
        var remoteScore = offer.RemotePolicy switch
        {
            "FullyRemote" => 15,
            "Hybrid" => 10,
            "OnSite" => 5,
            _ => 5
        };

        // Growth (0-20 points)
        var growthScore = offer.GrowthPotential * 2;

        // Tech stack (0-15 points)
        var techScore = (int)(offer.TechStackQuality * 1.5);

        // Benefits (0-10 points)
        var benefitCount = string.IsNullOrWhiteSpace(offer.Benefits)
            ? 0
            : offer.Benefits.Split(',', StringSplitOptions.RemoveEmptyEntries).Length;
        var benefitScore = Math.Min(benefitCount * 2, 10);

        return Math.Min(salaryScore + remoteScore + growthScore + techScore + benefitScore, 100);
    }

    private static decimal GetSuggestedCounter(decimal salary) =>
        Math.Round(salary * 1.15m, -2); // 15% above

    private static decimal GetWalkAwayPoint(decimal salary) =>
        Math.Round(salary * 0.95m, -2); // 5% below

    private static string FormatSalary(decimal salary, string currency) =>
        currency switch
        {
            "EUR" => $"\u20ac{salary:N0}",
            "GBP" => $"\u00a3{salary:N0}",
            "PLN" => $"{salary:N0} PLN",
            "CHF" => $"CHF {salary:N0}",
            _ => $"${salary:N0}"
        };

    private static List<NegotiationTip> GetNegotiationTips(OfferInput offer)
    {
        var tips = new List<NegotiationTip>
        {
            new()
            {
                Category = "Timing",
                Color = "cyan",
                Title = "Do not accept immediately",
                Description = "Express enthusiasm but request 3-5 business days to review the full compensation package. This is standard and expected."
            },
            new()
            {
                Category = "Research",
                Color = "blue",
                Title = "Know your market value",
                Description = $"Research salary ranges for similar roles at {offer.Company} and competitors. Use Glassdoor, Levels.fyi, and Blind for data."
            },
            new()
            {
                Category = "Strategy",
                Color = "green",
                Title = "Lead with value, not demands",
                Description = "Frame your counter as: 'Based on my experience in [specific skills] and the market rate for this role, I was expecting something closer to [counter amount].'"
            },
            new()
            {
                Category = "Benefits",
                Color = "yellow",
                Title = "Negotiate beyond base salary",
                Description = "If base salary is firm, negotiate signing bonus, equity/RSU, remote work days, PTO, professional development budget, or review timeline."
            }
        };

        if (offer.RemotePolicy == "OnSite")
        {
            tips.Add(new NegotiationTip
            {
                Category = "Remote",
                Color = "orange",
                Title = "Negotiate remote flexibility",
                Description = "If the role is on-site, negotiate 1-2 remote days per week. Frame it as: 'I do my best deep work from home and collaboration in the office.'"
            });
        }

        // High-salary specific tips ($150K+)
        if (offer.Salary >= 150_000m)
        {
            tips.Add(new NegotiationTip
            {
                Category = "Senior",
                Color = "cyan",
                Title = "Leverage your seniority",
                Description = "At this level, emphasize architectural decisions, team leadership, and revenue impact you've delivered. Quantify: 'I reduced deployment time by 60%' or 'I architected a system handling 10M+ requests/day.'"
            });
            tips.Add(new NegotiationTip
            {
                Category = "Equity",
                Color = "yellow",
                Title = "Negotiate equity/RSU",
                Description = $"At ${offer.Salary:N0}, equity can add 20-50% to total comp. Ask about RSU vesting schedule, refresh grants, and stock option strike price. Target total comp of ${offer.Salary * 1.3m:N0}-${offer.Salary * 1.5m:N0}."
            });
        }

        if (offer.Salary >= 200_000m)
        {
            tips.Add(new NegotiationTip
            {
                Category = "Executive",
                Color = "red",
                Title = "Request signing bonus",
                Description = "At this comp level, signing bonuses of $20K-$50K are common. Frame as compensation for unvested equity at your current company."
            });
        }

        tips.Add(new NegotiationTip
        {
            Category = "Close",
            Color = "green",
            Title = "Get everything in writing",
            Description = "Once terms are agreed, request an updated offer letter with all negotiated items before formally accepting."
        });

        return tips;
    }

