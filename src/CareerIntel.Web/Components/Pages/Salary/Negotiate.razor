@page "/salary/negotiate"
@using CareerIntel.Intelligence.Models
@using CareerIntel.Matching
@inject DataDirectoryConfig DataDir
@inject CareerIntel.Web.Services.ToastService Toast
@inject NegotiationIntelligenceEngine NegotiationIntelEngine
@inject NegotiationEngine NegotiationEngine
@inject NegotiationRepository NegotiationRepo
@inject VacancyRepository VacancyRepo

<div class="page-header">
    <h1 class="page-title">Negotiation & Offer Comparison</h1>
    <p class="page-subtitle">Analyze salary offers, get negotiation strategies, and compare multiple opportunities</p>
</div>

@if (!string.IsNullOrEmpty(_engineError))
{
    <div class="card" style="border-left: 3px solid var(--color-red, #e74c3c); margin-bottom: 1rem;">
        <p style="color: var(--color-red, #e74c3c);"><strong>Engine Error:</strong> @_engineError</p>
        <p class="text-muted">Some intelligence features may be unavailable.</p>
    </div>
}

@* Historical Negotiation Intelligence *@
@if (_historicalInsight is not null && _historicalInsight.TotalNegotiations > 0)
{
    <div class="card" style="margin-bottom: 1.5rem;">
        <h2 class="card-title">Historical Negotiation Intelligence</h2>
        <div class="card-grid">
            <StatCard Label="Total Negotiations" Value="@_historicalInsight.TotalNegotiations.ToString()"
                      Sub="tracked outcomes" />
            <StatCard Label="Success Rate" Value="@($"{_historicalInsight.SuccessRate:F0}%")"
                      Sub="@($"{_historicalInsight.AcceptedCount} accepted, {_historicalInsight.RejectedCount} rejected")"
                      CssClass="@(_historicalInsight.SuccessRate >= 50 ? "text-green" : "text-yellow")" />
            <StatCard Label="Avg Lift" Value="@($"{_historicalInsight.AverageNegotiationLift:F1}%")"
                      Sub="avg increase through negotiation" CssClass="text-cyan" />
            <StatCard Label="Avg Delta" Value="@($"${_historicalInsight.AverageOfferDelta:N0}")"
                      Sub="avg counter-offer gain" CssClass="text-green" />
        </div>

        @if (!string.IsNullOrEmpty(_historicalInsight.LearnedStrategy))
        {
            <div style="margin-top: 1rem; padding: 1rem; background: var(--bg-hover); border-radius: 6px;">
                <strong>Learned Strategy:</strong>
                <p style="margin-top: 0.5rem; line-height: 1.6;">@_historicalInsight.LearnedStrategy</p>
            </div>
        }

        @if (_historicalInsight.SkillLeverageMap.Count > 0)
        {
            <div style="margin-top: 1rem;">
                <h3 class="section-title">Skill Leverage Effectiveness</h3>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Skill</th>
                            <th>Times Used</th>
                            <th>Success Rate</th>
                            <th>Avg Lift</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var skill in _historicalInsight.SkillLeverageMap.Take(10))
                        {
                            <tr>
                                <td><strong>@skill.SkillName</strong></td>
                                <td>@skill.TimesUsedAsLeverage</td>
                                <td class="@(skill.SuccessRate >= 60 ? "text-green" : skill.SuccessRate >= 40 ? "text-yellow" : "text-red")">
                                    @skill.SuccessRate.ToString("F0")%
                                </td>
                                <td>$@skill.AverageLiftWhenUsed.ToString("N0")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        @if (_historicalInsight.StrategyHistory.Count > 0)
        {
            <div style="margin-top: 1rem;">
                <h3 class="section-title">Strategy Outcome History</h3>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Company</th>
                            <th>Strategy</th>
                            <th>Ask Delta</th>
                            <th>Outcome</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var outcome in _historicalInsight.StrategyHistory.Take(10))
                        {
                            <tr>
                                <td class="text-muted">@outcome.Date.ToString("MMM dd, yyyy")</td>
                                <td><strong>@outcome.Company</strong></td>
                                <td>
                                    <StatusBadge Text="@outcome.StrategyType"
                                                 Color="@GetStrategyColor(outcome.StrategyType)" />
                                </td>
                                <td>@outcome.AskDeltaPercent.ToString("F0")% ($@outcome.AskDelta.ToString("N0"))</td>
                                <td>
                                    <StatusBadge Text="@outcome.Outcome"
                                                 Color="@GetOutcomeColor(outcome.Outcome)" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
}

<div class="card">
    <h2 class="card-title">Add Offer</h2>
    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label>Company</label>
            <input type="text" @bind="_newOffer.Company" placeholder="Company name"
                   class="form-input" />
        </div>
        <div class="form-group" style="flex: 1;">
            <label>Position</label>
            <input type="text" @bind="_newOffer.Position" placeholder="Job title"
                   class="form-input" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label>Offered Salary</label>
            <input type="number" @bind="_newOffer.Salary" placeholder="Annual salary"
                   class="form-input" />
        </div>
        <div class="form-group" style="flex: 0.5;">
            <label>Currency</label>
            <select @bind="_newOffer.Currency"
                    class="form-input">
                <option value="USD">USD</option>
                <option value="EUR">EUR</option>
                <option value="GBP">GBP</option>
                <option value="PLN">PLN</option>
                <option value="CHF">CHF</option>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label>Remote Policy</label>
            <select @bind="_newOffer.RemotePolicy"
                    class="form-input">
                <option value="FullyRemote">Fully Remote</option>
                <option value="Hybrid">Hybrid</option>
                <option value="OnSite">On-Site</option>
            </select>
        </div>
        <div class="form-group" style="flex: 1;">
            <label>Benefits</label>
            <input type="text" @bind="_newOffer.Benefits" placeholder="Health, equity, PTO, etc. (comma separated)"
                   class="form-input" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label>Growth Potential (1-10)</label>
            <input type="number" @bind="_newOffer.GrowthPotential" min="1" max="10"
                   class="form-input" />
        </div>
        <div class="form-group" style="flex: 1;">
            <label>Tech Stack Quality (1-10)</label>
            <input type="number" @bind="_newOffer.TechStackQuality" min="1" max="10"
                   class="form-input" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group" style="flex: 1;">
            <label>Market Rate (optional, for better analysis)</label>
            <input type="number" @bind="_newOffer.MarketRate" placeholder="Market median salary for this role"
                   class="form-input" />
        </div>
    </div>
    <div style="display: flex; gap: 1rem; margin-top: 1rem;">
        <button class="btn btn-primary" @onclick="AddOffer"
                disabled="@(string.IsNullOrWhiteSpace(_newOffer.Company) || _newOffer.Salary <= 0)">
            Add Offer
        </button>
        <button class="btn" @onclick="AnalyzeNegotiation"
                disabled="@(string.IsNullOrWhiteSpace(_newOffer.Company) || _newOffer.Salary <= 0 || _analyzing)">
            @if (_analyzing)
            {
                <span>Analyzing...</span>
            }
            else
            {
                <span>Analyze Negotiation</span>
            }
        </button>
    </div>
</div>

@if (_showNegotiation)
{
    <div class="card" style="margin-top: 1.5rem;">
        <h2 class="card-title">Negotiation Strategy for @_analyzedOffer.Company</h2>

        @* Engine-powered strategy *@
        @if (_negotiationStrategy is not null)
        {
            <div class="card-grid">
                <StatCard Label="Offered Salary" Value="@FormatSalary(_analyzedOffer.Salary, _analyzedOffer.Currency)"
                          Sub="@_analyzedOffer.Position" />
                <StatCard Label="Suggested Counter" Value="@FormatSalary(_negotiationStrategy.SuggestedCounter, _analyzedOffer.Currency)"
                          Sub="@_negotiationStrategy.OverallAssessment" CssClass="text-green" />
                <StatCard Label="BATNA Value" Value="@FormatSalary(_negotiationStrategy.BatnaValue, _analyzedOffer.Currency)"
                          Sub="best alternative" CssClass="text-cyan" />
                <StatCard Label="Should Negotiate" Value="@(_negotiationStrategy.ShouldNegotiate ? "Yes" : "No")"
                          Sub="based on analysis" CssClass="@(_negotiationStrategy.ShouldNegotiate ? "text-green" : "text-yellow")" />
            </div>

            @* Risk Assessment *@
            <div style="margin-top: 1rem; padding: 1rem; background: var(--bg-hover); border-radius: 6px;">
                <strong>Risk Assessment:</strong>
                <p style="margin-top: 0.5rem;">@_negotiationStrategy.RiskAssessment</p>
            </div>

            @* Counter Justification *@
            @if (!string.IsNullOrEmpty(_negotiationStrategy.CounterJustification))
            {
                <div style="margin-top: 1rem; padding: 1rem; background: var(--bg-hover); border-radius: 6px;">
                    <strong>Counter Justification:</strong>
                    <p style="margin-top: 0.5rem; line-height: 1.6;">@_negotiationStrategy.CounterJustification</p>
                </div>
            }

            @* Leverage Points *@
            @if (_negotiationStrategy.LeveragePoints.Count > 0)
            {
                <div style="margin-top: 1rem;">
                    <h3 class="section-title">Your Leverage Points</h3>
                    <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                        @foreach (var point in _negotiationStrategy.LeveragePoints)
                        {
                            <div class="stat-card" style="padding: 0.75rem;">
                                <div style="display: flex; gap: 0.5rem; align-items: center;">
                                    <StatusBadge Text="Leverage" Color="green" />
                                    <span>@point</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @* Negotiation Script *@
            @if (!string.IsNullOrEmpty(_negotiationStrategy.NegotiationScript))
            {
                <div style="margin-top: 1rem;">
                    <h3 class="section-title">Negotiation Script</h3>
                    <div style="padding: 1rem; background: var(--bg-secondary, #1e1e1e); border-radius: 6px; border-left: 3px solid var(--color-cyan, #00bcd4); white-space: pre-wrap; line-height: 1.6;">@_negotiationStrategy.NegotiationScript</div>
                </div>
            }

            @* Counter-Strategy from Intelligence Engine *@
            @if (!string.IsNullOrEmpty(_counterStrategy))
            {
                <div style="margin-top: 1rem; padding: 1rem; background: var(--bg-hover); border-radius: 6px; border-left: 3px solid var(--color-green, #2ecc71);">
                    <strong>Intelligence-Driven Counter Strategy:</strong>
                    <p style="margin-top: 0.5rem; line-height: 1.6;">@_counterStrategy</p>
                </div>
            }
        }
        else
        {
            @* Fallback: basic analysis when engine strategy is not available *@
            <div class="card-grid">
                <StatCard Label="Offered Salary" Value="@FormatSalary(_analyzedOffer.Salary, _analyzedOffer.Currency)"
                          Sub="@_analyzedOffer.Position" />
                <StatCard Label="Suggested Counter" Value="@FormatSalary(GetSuggestedCounter(_analyzedOffer.Salary), _analyzedOffer.Currency)"
                          Sub="10-20% above offer" CssClass="text-green" />
                <StatCard Label="Walk-Away Point" Value="@FormatSalary(GetWalkAwayPoint(_analyzedOffer.Salary), _analyzedOffer.Currency)"
                          Sub="minimum acceptable" CssClass="text-yellow" />
            </div>
        }

        <div style="margin-top: 1.5rem;">
            <h3 class="section-title">Negotiation Tips</h3>
            <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                @foreach (var tip in GetNegotiationTips(_analyzedOffer))
                {
                    <div class="stat-card">
                        <div style="display: flex; gap: 0.75rem; align-items: flex-start;">
                            <StatusBadge Text="@tip.Category" Color="@tip.Color" />
                            <div>
                                <strong>@tip.Title</strong>
                                <p style="margin: 0.25rem 0 0 0;">@tip.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@if (_offers.Count > 0)
{
    <div class="card" style="margin-top: 1.5rem;">
        <h2 class="card-title">Offer Comparison (@_offers.Count offers)</h2>

        <div class="card-grid">
            @foreach (var offer in _offers)
            {
                var isBest = offer == _bestOffer;
                <div class="card" style="@(isBest ? "border: 2px solid var(--color-green, #2ecc71);" : "")">
                    @if (isBest)
                    {
                        <div style="margin-bottom: 0.5rem;">
                            <StatusBadge Text="Best Overall" Color="green" />
                        </div>
                    }
                    <h3 class="card-title">@offer.Company</h3>
                    <p class="text-muted" style="margin: 0 0 1rem 0;">@offer.Position</p>

                    <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                        <div style="display: flex; justify-content: space-between;">
                            <span>Salary</span>
                            <strong>@FormatSalary(offer.Salary, offer.Currency)</strong>
                        </div>
                        <div style="display: flex; justify-content: space-between;">
                            <span>Remote</span>
                            <StatusBadge Text="@offer.RemotePolicy"
                                         Color="@StatusBadge.GetColorForStatus(offer.RemotePolicy)" />
                        </div>
                        <div style="display: flex; justify-content: space-between;">
                            <span>Growth</span>
                            <span>@offer.GrowthPotential/10</span>
                        </div>
                        <div style="display: flex; justify-content: space-between;">
                            <span>Tech Stack</span>
                            <span>@offer.TechStackQuality/10</span>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(offer.Benefits))
                        {
                            <div style="margin-top: 0.5rem;">
                                <span class="text-muted">Benefits:</span>
                                <div style="display: flex; flex-wrap: wrap; gap: 0.3rem; margin-top: 0.25rem;">
                                    @foreach (var benefit in offer.Benefits.Split(',', StringSplitOptions.TrimEntries | StringSplitOptions.RemoveEmptyEntries))
                                    {
                                        <span class="badge">@benefit</span>
                                    }
                                </div>
                            </div>
                        }
                        <div style="display: flex; justify-content: space-between; margin-top: 0.5rem; padding-top: 0.5rem; border-top: 1px solid var(--border-color, #444);">
                            <span>Overall Score</span>
                            <strong class="@GetScoreCss(offer.OverallScore)">@offer.OverallScore/100</strong>
                        </div>
                    </div>

                    <button class="btn" style="margin-top: 1rem; width: 100%;"
                            @onclick="() => RemoveOffer(offer)">Remove</button>
                </div>
            }
        </div>
    </div>

    <div class="card" style="margin-top: 1.5rem;">
        <h2 class="card-title">Side-by-Side Comparison</h2>
        <table class="data-table">
            <thead>
                <tr>
                    <th>Criterion</th>
                    @foreach (var offer in _offers)
                    {
                        <th>@offer.Company</th>
                    }
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><strong>Salary</strong></td>
                    @foreach (var offer in _offers)
                    {
                        var isBestSalary = offer.Salary == _offers.Max(o => o.Salary);
                        <td class="@(isBestSalary ? "text-green" : "")">
                            <strong>@FormatSalary(offer.Salary, offer.Currency)</strong>
                        </td>
                    }
                </tr>
                <tr>
                    <td><strong>Remote Policy</strong></td>
                    @foreach (var offer in _offers)
                    {
                        <td>
                            <StatusBadge Text="@offer.RemotePolicy"
                                         Color="@StatusBadge.GetColorForStatus(offer.RemotePolicy)" />
                        </td>
                    }
                </tr>
                <tr>
                    <td><strong>Benefits</strong></td>
                    @foreach (var offer in _offers)
                    {
                        <td>@(string.IsNullOrWhiteSpace(offer.Benefits) ? "None listed" : offer.Benefits)</td>
                    }
                </tr>
                <tr>
                    <td><strong>Growth Potential</strong></td>
                    @foreach (var offer in _offers)
                    {
                        var isBestGrowth = offer.GrowthPotential == _offers.Max(o => o.GrowthPotential);
                        <td class="@(isBestGrowth ? "text-green" : "")">@offer.GrowthPotential/10</td>
                    }
                </tr>
                <tr>
                    <td><strong>Tech Stack</strong></td>
                    @foreach (var offer in _offers)
                    {
                        var isBestTech = offer.TechStackQuality == _offers.Max(o => o.TechStackQuality);
                        <td class="@(isBestTech ? "text-green" : "")">@offer.TechStackQuality/10</td>
                    }
                </tr>
                <tr>
                    <td><strong>Overall Score</strong></td>
                    @foreach (var offer in _offers)
                    {
                        var isBest = offer == _bestOffer;
                        <td>
                            <strong class="@(isBest ? "text-green" : "")">@offer.OverallScore/100</strong>
                        </td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
}

@if (_offers.Count == 0 && !_showNegotiation)
{
    <div class="card" style="margin-top: 1.5rem;">
        <h3 class="card-title">How to Use</h3>
        <div class="card-grid">
            <div class="stat-card">
                <h4 class="section-title">1. Add Offers</h4>
                <p>Enter each job offer's details including salary, benefits, and growth potential.</p>
            </div>
            <div class="stat-card">
