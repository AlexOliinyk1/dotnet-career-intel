<div class="nav-section" role="group" aria-label="@Title">
    <div class="nav-section-title" id="nav-@Title.ToLowerInvariant().Replace(" ", "-")">@Title</div>
    <div role="list" aria-labelledby="nav-@Title.ToLowerInvariant().Replace(" ", "-")">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
